@model PhotoHistory.Models.NewUserModel       

<div id="content-center">
    <form class="form-horizontal" action="/User/Create" method="post">
    <fieldset>
        <legend>Create account</legend>
        <div class="control-group @if (Html.ValidationMessage( "Login" ) != null) { <text>error</text> }">
            <label class="control-label" for="username">
                Username</label>
            <div class="controls">
                <input type="text" class="input-normal" id="Login" name="Login" />
                @if ( Html.ValidationMessage( "Login" ) != null )
                {
                    <span class="help-inline">@Html.ValidationMessage( "Login" )</span>
                }
            </div>
        </div>
        <div class="control-group @if (Html.ValidationMessage( "Password" ) != null) { <text>error</text> }">
            <label class="control-label" for="password">
                Password</label>
            <div class="controls">
                <input type="password" class="input-normal" id="Password" name="Password" />
                @if ( Html.ValidationMessage( "Password" ) != null )
                {
                    <span class="help-inline">@Html.ValidationMessage( "Password" )</span>
                }
            </div>
        </div>
        <div class="control-group @if (Html.ValidationMessage( "ConfirmedPassword" ) != null) { <text>error</text> }">
            <label class="control-label" for="password2">
                Confirm password</label>
            <div class="controls">
                <input type="password" class="input-normal" id="ConfirmedPassword" name="ConfirmedPassword" />
                @if ( Html.ValidationMessage( "ConfirmedPassword" ) != null )
                {
                    <span class="help-inline">@Html.ValidationMessage( "ConfirmedPassword" )</span>
                }
            </div>
        </div>
        <div class="control-group @if (Html.ValidationMessage( "Email" ) != null) { <text>error</text> }">
            <label class="control-label" for="email">
                E-mail address</label>
            <div class="controls">
                <input type="text" class="input-normal" id="Email" name="Email" />
                @if ( Html.ValidationMessage( "Email" ) != null )
                {
                    <span class="help-inline">@Html.ValidationMessage( "Email" )</span>
                }
            </div>
        </div>
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">
                Register</button>
        </div> 
    </fieldset>
    </form>
</div>
