@model PhotoHistory.Models.AlbumModel
<div id="content-center">
    <form class="form-horizontal" action="/Album/Create" method="post">
    <fieldset>
        <legend>Create new album</legend>
        @if (Model != null)
        {
            <div class="alert alert-error">
                @if (ViewBag.ErrorMessage != null)
                {
                    @ViewBag.ErrorMessage
                }
                else
                {
                    <text>Some fields are invalid - please correct the errors.</text>
                }
            </div>
        }
        <div class="control-group @Html.MyValidationMark( "Name" )">
            <label class="control-label" for="name">
                Name</label>
            <div class="controls">
                <input type="text" class="input-xlarge" id="Name" name="Name" value="@(Model != null ? Model.Name: "")">
                @Html.MyValidationMessage( "Name" )
            </div>
        </div>
        <div class="control-group @Html.MyValidationMark( "Description" )">
            <label class="control-label" for="description">
                Description</label>
            <div class="controls">
                <textarea class="input-xlarge" id="Description" name="Description" value="@(Model != null ? Model.Description: "")" rows="3" placeholder="Describe your album here... (optional)"></textarea>
                @Html.MyValidationMessage( "Description" )
            </div>
        </div>
        <div class="control-group @Html.MyValidationMark( "CategoryId" )">
            <label class="control-label" for="description">
                Category</label>
            <div class="controls">
                <select class="input-normal inline" id="CategoryId" name="CategoryId">
                    <option>People</option>
                    <option>Building</option>
                    <option>City</option>
                    <option>Landscape</option>
                    <option>Room</option>
                    <option>Other</option>
                </select>
                @Html.MyValidationMessage( "CategoryId" )
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="description">
                Photo reminder</label>
            <div class="controls">
                <label class="radio">
                    <input name="reminder" id="reminder" value="remindNo" checked="checked" type="radio">
                    Disabled
                </label>
                <label class="radio">
                    <input name="reminder" id="reminder" value="remindYes" type="radio">
                    Enabled - remind me to take a photo
                </label>
                <!-- to nizej widoczne tylko jesli wybrano ENABLED (reminder aktywny) -->
                <div class="well">
                    Remind me every
                    <select class="input-small inline" id="interval">
                        <option>day</option>
                        <option>week</option>
                        <option>2 weeks</option>
                        <option>month</option>
                        <option>3 months</option>
                        <option>6 months</option>
                        <option>year</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="control-group" @Html.MyValidationMark( "Public" )>
            <label class="control-label" for="description">
                Access rights</label>
            <div class="controls">
                <label class="radio">
                    @Html.RadioButtonFor(model => Model.Public, true, new { @checked = "checked" })
                    Public - everyone can view this album
                </label>
                <label class="radio">
                    @Html.RadioButtonFor(model => Model.Public, false)
                    Private - only me and perhaps some specific people can view this album
                </label>
                <!-- to nizej widoczne tylko jesli wybrano PRIVATE -->
                <div class="well">
                    <label class="radio">
                        <input name="privateMode" id="privateMode" value="password" checked="checked" type="radio">
                        Protect by password
                    </label>
                    <!-- to nizej widoczne tylko jesli wybrano dostep przez haslo -->
                    <input type="text" class="input-medium inline" id="password">
                    <label class="radio">
                        <input name="privateMode" id="privateMode" value="users" type="radio">
                        Specify list of allowed users
                    </label>
                    <!-- to nizej widoczne tylko jesli wybrano dostep przez liste uztywkonikow -->
                    <input type="text" class="input-xlarge inline" id="usersList">
                </div>
                @Html.MyValidationMessage( "Public" )
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="description">
                Comment rights</label>
            <div class="controls">
                <label class="checkbox">
                    Allow comments
                    @Html.CheckBoxFor(model => Model.CommentsAllow, new { @checked = "checked" })                    
                </label>
            </div>
        </div>
        <div class="form-actions">
            <button type="submit" class="btn btn-success">
                Create album</button>
            <button class="btn">
                Cancel</button>
        </div>
    </fieldset>
    </form>
</div>
