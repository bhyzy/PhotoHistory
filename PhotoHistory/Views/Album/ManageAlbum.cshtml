<div id="content">
    <h1 class="page-title">
        Manage album</h1>
    <div id="manage-settings">
        <div class="left">
            <h2 class="page-section">
                Settings</h2>
        </div>
        <div class="actions right">
            <a href="@Url.Action("Edit", new { id = Model.Id })">
                <button class="btn btn-warning">
                    <i class="icon-edit icon-white"></i>Change settings</button>
            </a>
            <button class="btn btn-danger">
                <i class="icon-remove icon-white"></i>Delete album</button>
        </div>
        <div style="clear: both;">
            &nbsp;</div>
        <fieldset class="form-horizontal">
            <div class="control-group">
                <label class="control-label">
                    Name</label>
                <div class="controls">
                    <div class="well well-small">
                        Noah K. Everyday</div>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">
                    Description</label>
                <div class="controls">
                    <div class="well well-small">
                        Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vestibulum vitae odio non
                        diam posuere fermentum. Sed fringilla varius sapien quis vehicula.</div>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">
                    Category</label>
                <div class="controls">
                    <div class="well well-small">
                        People</div>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">
                    Photo reminder</label>
                <div class="controls">
                    <div class="well well-small">
                        Enabled - remind every 2 weeks</div>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">
                    Access rights</label>
                <div class="controls">
                    <div class="well well-small">
                        Public - everyone can view this album</div>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">
                    Comment rights</label>
                <div class="controls">
                    <div class="well well-small">
                        Enabled</div>
                </div>
            </div>
        </fieldset>
    </div>
    <div id="manage-photos">
        <div class="left">
            <h2 class="page-section">
                Photos</h2>
        </div>
        <form action="#" method="post">
        <div class="actions right">
            <button class="btn btn-success">
                <i class="icon-camera icon-white"></i>Add photo</button>
            <button class="btn btn-danger">
                <i class="icon-remove icon-white"></i>Delete selected photos</button>
        </div>
        <div style="clear: both;">
            &nbsp;</div>
        <div id="photos-list">
            <div class="photo-entry">
                <div class="photo-handle">
                    <input type="checkbox" id="1"></div>
                <div class="photo-thumb">
                    <img src="tmp/photo1.jpg" class="photo" /></div>
                <div class="photo-date">
                    2012-04-13</div>
                <div class="photo-desc">
                    Ala ma kota filemona...</div>
            </div>
            <div class="photo-entry">
                <div class="photo-handle">
                    <input type="checkbox" id="2"></div>
                <div class="photo-thumb">
                    <img src="tmp/photo1.jpg" class="photo" /></div>
                <div class="photo-date">
                    2012-04-13</div>
                <div class="photo-desc">
                    Ala ma kota filemona...</div>
            </div>
            <div class="photo-entry">
                <div class="photo-handle">
                    <input type="checkbox" id="3"></div>
                <div class="photo-thumb">
                    <img src="tmp/photo1.jpg" class="photo" /></div>
                <div class="photo-date">
                    2012-04-13</div>
                <div class="photo-desc">
                    Ala ma kota filemona...</div>
            </div>
            <div class="photo-entry">
                <div class="photo-handle">
                    <input type="checkbox" id="4"></div>
                <div class="photo-thumb">
                    <img src="tmp/photo1.jpg" class="photo" /></div>
                <div class="photo-date">
                    2012-04-13</div>
                <div class="photo-desc">
                    Ala ma kota filemona...</div>
            </div>
        </div>
        </form>
    </div>
</div>
